// Add a utility function to get a human-readable title for a tool
const getToolTitle = (tool: any): string => {
  switch(tool.toolName) {
    case 'getUserSolanaBalance':
    case 'getAgentSolanaBalance':
      return 'Solana Balance';
    case 'getUserPortfolioValue':
    case 'getAgentPortfolioValue':
      return 'Portfolio Value';
    case 'getUserTokenHoldings':
    case 'getAgentTokenHoldings':
      return 'Token Holdings';
    case 'getFearAndGreedIndex':
      return 'Fear & Greed Index';
    case 'getSolanaTransactionVolume':
      return 'Solana Transaction Volume';
    case 'getMarketMovers':
      return 'Market Movers';
    case 'getRecentlyLaunchedCoins':
      return 'Recently Launched Coins';
    case 'getTokenInfo':
      return tool.args?.symbol 
        ? `Token Info: ${tool.args.symbol.toUpperCase()}`
        : 'Token Info';
    case 'searchTokens':
      return tool.args?.query
        ? `Token Search: ${tool.args.query}`
        : 'Token Search';
    case 'getContractAddress':
      return 'Contract Address';
    case 'getTotalCryptoMarketCap':
      return 'Total Crypto Market Cap';
    case 'getMarketCategories':
      return 'Market Categories';
    case 'getDerivativesExchanges':
      return 'Derivatives Exchanges';
    case 'getTopHolders':
      return tool.args?.symbol
        ? `Top Holders: ${tool.args.symbol.toUpperCase()}`
        : 'Top Token Holders';
    case 'getAccountDetails':
      return 'Account Details';
    case 'getTrendingTokens':
      return tool.args?.chain === 'solana' 
        ? 'Trending Solana Tokens'
        : 'Trending Tokens';
    case 'getTopNfts':
      return 'Top NFTs';
    case 'swap':
      return 'Token Swap';
    case 'getRecentDexScreenerTokens':
      return 'Recent DexScreener Tokens';
    case 'getCryptoNews':
      return 'Crypto News';
    case 'stockAnalysis':
      return tool.args?.symbol
        ? `Stock Analysis: ${tool.args.symbol.toUpperCase()}`
        : 'Stock Analysis';
    case 'optionsAnalysis':
      return 'Options Analysis';
    case 'newsAnalysis':
      return 'News Analysis';
    case 'webResearch':
      return 'Web Research';
    case 'getTradingViewChart':
      return tool.args?.symbol
        ? `Chart: ${tool.args.symbol.toUpperCase()}`
        : 'TradingView Chart';
    case 'getTechnicalAnalysis':
      return tool.args?.symbol
        ? `Technical Analysis: ${tool.args.symbol.toUpperCase()}`
        : 'Technical Analysis';
    case 'getFredSeries':
      return tool.args?.series_id
        ? `FRED: ${tool.args.series_id}`
        : 'FRED Economic Data';
    case 'fredSearch':
      return tool.args?.query
        ? `FRED Search: ${tool.args.query}`
        : 'FRED Search Results';
    default:
      return tool.toolName
        ? tool.toolName.replace(/([A-Z])/g, ' $1').replace(/^./, (str: string) => str.toUpperCase())
        : 'Tool Result';
  }
};

