      // For desktop: open sidebar and switch to results tab
      if (window.innerWidth >= 768) {
        setSidebarOpen(true);
        setActiveTab('results');
        
        // Direct selection of the results tab using DOM
        setTimeout(() => {
          const resultsTabButton = document.querySelector('.flex.border-b.border-zinc-700 > button:nth-child(3)') as HTMLButtonElement;
          if (resultsTabButton) {
            console.log("First tool appearance: Clicking results tab button directly");
            resultsTabButton.click();
          }
        }, 200);
      } else {
        // For mobile: open tool results bottom sheet for the first tool
        const firstToolMessage = messages.find(message => 
          message.toolInvocations && message.toolInvocations.length > 0
        );
        if (firstToolMessage && firstToolMessage.toolInvocations) {
          const firstTool = firstToolMessage.toolInvocations[0];
          setSelectedToolId(`${firstToolMessage.id}-${firstTool.toolCallId}`);
          setShowToolResultsBottomSheet(true);
        }
      }
    }
    
    setHasTools(hasToolResults);
  }, [messages, hasTools, setSidebarOpen]);

  // Listen for new tool invocations to show results tab on desktop and select the tool
  useEffect(() => {
    // Track if tools have been added
    const toolCount = messages.reduce((count, message) => {
      return count + (message.toolInvocations?.length || 0);
    }, 0);
    
    // Skip if there are no tools
    if (toolCount === 0) return;
    
    // Find the most recent tool
    let latestToolId: string | null = null;
    let latestDate = new Date(0);
    
    for (const message of messages) {
      if (message.toolInvocations?.length) {
        const messageDate = new Date(message.createdAt || Date.now());
        if (messageDate > latestDate) {
          latestDate = messageDate;
          const latestTool = message.toolInvocations[0];
          latestToolId = `${message.id}-${latestTool.toolCallId}`;
        }
      }
    }
    
    if (latestToolId) {
      // On desktop: switch to results tab and select the tool
      if (window.innerWidth >= 768) {
        console.log("Auto-selecting tool on desktop:", latestToolId);
        
        // Force select the results tab and the tool
        setActiveTab('results');
        setSidebarOpen(true);
        setSelectedToolId(latestToolId);
        
        // Direct DOM manipulation to ensure results tab is selected
        setTimeout(() => {
          const resultsTabButton = document.querySelector('.flex.border-b.border-zinc-700 > button:nth-child(3)') as HTMLButtonElement;
          if (resultsTabButton) {
            console.log("Clicking results tab button directly");
            resultsTabButton.click();
          }
        }, 100);
      } 
      // On mobile: show the bottom sheet with the selected tool
      else if (!showToolResultsBottomSheet) {
        console.log("Auto-selecting tool on mobile:", latestToolId);
        setSelectedToolId(latestToolId);
        setShowToolResultsBottomSheet(true);
      }
    }
  }, [messages, setSidebarOpen, activeTab, showToolResultsBottomSheet]);

  // Function to select a tool from the main chat interface
  const handleSelectTool = (messageId: string, toolCallId: string) => {
    const toolId = `${messageId}-${toolCallId}`;
    setSelectedToolId(toolId);
    
    // For desktop: open sidebar and switch to results tab
    if (window.innerWidth >= 768) {
      setSidebarOpen(true);
      setActiveTab('results');
    } else {
      // For mobile: open the tool results bottom sheet
      setShowToolResultsBottomSheet(true);
    }
  };

  // For mobile, don't show the results tab at all
  useEffect(() => {
    const handleResize = () => {
      if (window.innerWidth < 768) {
        // On mobile, hide the results tab by ensuring it's not the active tab
        if (activeTab === 'results') {
          setActiveTab('tools');
        }
      }
    };

    // Run initially
    handleResize();
    
    // Add resize listener
    window.addEventListener('resize', handleResize);
    return () => window.removeEventListener('resize', handleResize);
  }, [activeTab]);

  // Add effect to track the most recent tool for the FAB
  useEffect(() => {
    // Find the most recent assistant message with tool invocations
    const messagesWithTools = messages
      .filter(message => message.role === 'assistant' && message.toolInvocations && message.toolInvocations.length > 0)
      .reverse();
    
    if (messagesWithTools.length > 0) {
      const latestMessage = messagesWithTools[0];
      if (latestMessage.toolInvocations && latestMessage.toolInvocations.length > 0) {
        const latestTool = latestMessage.toolInvocations[0];
        setLastToolId(`${latestMessage.id}-${latestTool.toolCallId}`);
      }
    }
  }, [messages]);

  return (
    <div className="h-full bg-zinc-900 flex flex-col overflow-hidden ios-fix">
      {/* Chat header - fixed height */}
      <div className="flex-none h-[61px] bg-zinc-900 border-b border-zinc-700 flex items-center px-4 justify-between z-10">
        <div className="flex items-center gap-2">
          <div>
                <img 
                  src="https://d1olseq3j3ep4p.cloudfront.net/agents/cc425065-b039-48b0-be14-f8afa0704357/profile-1738538619696.jpg" 
                  alt="Rhun Capital"
                  className="w-8 h-8 rounded-full object-cover"
                />
            </div>
            <Link className="text-indigo-500 text-indigo-400" href={`/`}>          
              <h1 className="text-lg font-medium text-white">Rhun Capital</h1>
            </Link>
          </div>
        
        <div className="flex items-center gap-2">
          {/* Mobile Menu Button */}
          <button 
            onClick={() => setSidebarOpen(!sidebarOpen)}
            className="md:hidden p-2 rounded-md bg-zinc-800 text-zinc-400 hover:bg-zinc-700 transition-colors"
            aria-label="Toggle tools sidebar"
          >
            {sidebarOpen ? <XIcon size={20} /> : <LayoutGrid size={20} />}
          </button>
          
          {/* Desktop toggle sidebar button - hidden on mobile */}
          <button 
            onClick={() => setSidebarOpen(!sidebarOpen)}
            className="hidden md:block p-2 rounded-md bg-zinc-800 text-zinc-400 hover:bg-zinc-700 transition-colors"
            aria-label={sidebarOpen ? "Close sidebar" : "Open sidebar"}
          >
            {sidebarOpen ? (
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                <path d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
              </svg>
            ) : (
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                <path d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
              </svg>
            )}
          </button>
        </div>
      </div>

      {/* Main content area - flexible layout */}
      <div className="flex flex-1 overflow-hidden w-full">
        {/* Chat content */}
        <div className={`flex-1 flex flex-col relative transition-all duration-300 ${!sidebarOpen ? 'w-full' : activeTab === 'results' ? 'md:w-1/2' : 'md:w-[70%]'}`}>
          {/* Scrollable area */}
          <div className="flex flex-1 h-full">
            {/* Messages panel */}
            <div 
              ref={chatContainerRef}
              className="flex-1 overflow-y-auto hide-scrollbar chat-scrollable"
              style={{ 
                paddingBottom: '72px', 
                overflowX: 'hidden'
              }}
              onDragOver={handleDragOver}
              onDragLeave={handleDragLeave}
              onDrop={handleDrop}
            >
              <AnimatePresence>
                {isDragging && (
                  <motion.div
                    className="fixed inset-0 z-50 bg-zinc-900/90 flex items-center justify-center"
                    initial={{ opacity: 0 }}
                    animate={{ opacity: 1 }}
                    exit={{ opacity: 0 }}
                  >
                    <div className="text-center">
                      <p className="text-white text-lg">Drop files here</p>
                      <p className="text-zinc-400">(images and text only)</p>
                    </div>
                  </motion.div>
                )}
              </AnimatePresence>
                
              <div className="max-w-full mx-auto w-full pt-4 pl-4 pr-2 md:pl-8 md:pr-4">
