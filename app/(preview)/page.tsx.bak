                        >
                          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                          </svg>
                        </button>
                      </motion.div>
                    ) : (
                      <motion.div
                        key={file.name}
                        className="relative"
                        initial={{ scale: 0.8, opacity: 0 }}
                        animate={{ scale: 1, opacity: 1 }}
                        exit={{ scale: 0.8, opacity: 0 }}
                      >
                        <div className="h-16 w-16 p-2 text-[8px] bg-zinc-800 rounded-md border border-zinc-700 overflow-hidden">
                          <TextFilePreview file={file} />
                        </div>
                        <button
                          onClick={() => handleRemoveFile(file)}
                          className="absolute -top-2 -right-2 bg-zinc-800 text-zinc-400 hover:text-white rounded-full p-1 w-6 h-6 flex items-center justify-center"
                          aria-label="Remove file"
                        >
                          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                          </svg>
                        </button>
                      </motion.div>
                    )
                  )}
                </div>
              )}
            </AnimatePresence>

            <form onSubmit={(event) => {
              const options = files ? { experimental_attachments: files } : {};
              handleFormSubmit(event, options);
            }} className="max-w-3xl mx-auto flex gap-2 relative">
              <input
                type="file"
                ref={fileInputRef}
                className="hidden"
                multiple
                accept="image/png,image/jpeg,image/jpg,text/*"
                onChange={handleFileChange}
              />
              
              <div className="flex-1 flex items-center bg-zinc-800 rounded-lg px-4">
                <button
                  type="button"
                  onClick={handleUploadClick}
                  className="p-2 text-zinc-400 hover:text-white"
                >
                  <AttachmentIcon />
                </button>
                
                <textarea
                  ref={inputRef}
                  className="flex-1 bg-transparent py-2 px-2 text-white outline-none resize-none overflow-y-auto"
                  placeholder="Send a message..."
                  value={input}
                  onChange={(e) => {
                    handleInputChange(e);
                  }}
                  onKeyDown={(event) => {
                    if (event.key === 'Enter' && !event.shiftKey) {
                      event.preventDefault();
                      if (input.trim()) {
                        const options = files ? { experimental_attachments: files } : {};
                        handleFormSubmit(event, options);
                      }
                    }
                  }}
                  onPaste={handlePaste}
                  rows={1}
                  style={{ minHeight: '40px', maxHeight: '150px' }}
                />
                <button type="submit" className="p-2 text-zinc-400 hover:text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855H.766l-.452.18a.5.5 0 0 0-.082.887l.41.26.001.002 4.995 3.178 3.178 4.995.002.002.26.41a.5.5 0 0 0 .886-.083l6-15Zm-1.833 1.89L6.637 10.07l-.215-.338a.5.5 0 0 0-.154-.154l-.338-.215 7.494-7.494 1.178-.471-.47 1.178Z"/>
                  </svg>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>

      {/* Sidebar */}
      <div 
        className={`hidden md:block border-l border-zinc-700 bg-zinc-900 transition-all duration-300 ${
          !sidebarOpen ? 'w-0' : activeTab === 'results' ? 'w-1/2' : 'w-[30%]'
        }`}
      >
        {sidebarOpen && (
          <ChatSidebar 
            agent={agent}
            isOpen={true}
            onToggle={() => setSidebarOpen(!sidebarOpen)}
            onToolSelect={handleToolSelect}
            refreshAgent={refreshAgent}
            messages={messages}
            defaultTab="tools"
            selectedToolId={selectedToolId}
            onToolSelected={setSelectedToolId}
            pendingToolCommand={pendingToolCommand}
            isLoading={isLoading}
          />
        )}
      </div>
    </div>

    {/* Mobile Bottom Sheet */}
    <AnimatePresence>
      {sidebarOpen && (
        <motion.div 
          className="md:hidden fixed inset-0 bg-black bg-opacity-50 z-50 overflow-hidden"
          initial={{ opacity: 0 }}
          animate={{ opacity: 1 }}
          exit={{ opacity: 0 }}
          onClick={() => setSidebarOpen(false)}
        >
          {/* Bottom sheet with drag capability */}
          <motion.div 
            className="absolute bottom-0 left-0 right-0 bg-zinc-900 shadow-lg rounded-t-xl overflow-hidden flex flex-col"
            style={{ height: "75vh" }}
            initial={{ y: "100%" }}
            animate={{ y: 0 }}
            exit={{ y: "100%" }}
            transition={{ type: "spring", damping: 25, stiffness: 300 }}
            drag="y"
            dragConstraints={{ top: 0, bottom: 0 }}
            dragElastic={0.2}
            onDragEnd={(_, info) => {
              if (info.offset.y > 100) {
                setSidebarOpen(false);
              }
            }}
            onClick={(e) => e.stopPropagation()}
          >
            {/* Drag handle */}
            <div className="w-full flex justify-center pt-4 pb-5 cursor-grab flex-shrink-0">
              <div className="w-16 h-1.5 bg-zinc-600 rounded-full"></div>
            </div>
            
            <div className="overflow-y-auto flex-1">
              <ChatSidebar 
                agent={agent}
                isOpen={true}
                onToggle={() => setSidebarOpen(false)}
                onToolSelect={handleToolSelect}
                refreshAgent={refreshAgent}
                messages={messages}
                defaultTab="tools"
                selectedToolId={selectedToolId}
                onToolSelected={setSelectedToolId}
                pendingToolCommand={pendingToolCommand}
                isLoading={isLoading}
              />
            </div>
          </motion.div>
        </motion.div>
      )}
    </AnimatePresence>

    {/* Tool Results Mobile Bottom Sheet */}
    <AnimatePresence>
      {showToolResultsBottomSheet && selectedToolId && (
        <motion.div 
          className="md:hidden fixed inset-0 bg-black bg-opacity-70 z-50 overflow-hidden"
          initial={{ opacity: 0 }}
          animate={{ opacity: 1 }}
          exit={{ opacity: 0 }}
          onClick={() => setShowToolResultsBottomSheet(false)}
        >
          {/* Bottom sheet with drag capability */}
          <motion.div 
            className="absolute bottom-0 left-0 right-0 bg-zinc-900 shadow-lg rounded-t-xl overflow-hidden flex flex-col"
            style={{ height: "80vh" }}
            initial={{ y: "100%" }}
            animate={{ y: 0 }}
            exit={{ y: "100%" }}
            transition={{ type: "spring", damping: 25, stiffness: 300 }}
            drag="y"
            dragConstraints={{ top: 0, bottom: 0 }}
            dragElastic={0.2}
            onDragEnd={(_, info) => {
              if (info.offset.y > 100) {
                setShowToolResultsBottomSheet(false);
              }
            }}
            onClick={(e) => e.stopPropagation()}
          >
            {/* Drag handle */}
            <div className="w-full flex justify-center pt-8 pb-8 cursor-grab flex-shrink-0">
              <div className="w-20 h-1.5 bg-zinc-600 rounded-full"></div>
            </div>
            
            {/* Header with close button and tool selector */}
            <div className="px-4 pb-4 flex flex-col border-b border-zinc-700">
      
              
              {/* Simple Tool Selection Dropdown */}
              {messages.some(message => message.toolInvocations && message.toolInvocations.length > 0) && (
                <div className="relative">
                  <button
                    onClick={() => setShowToolsDropdown(!showToolsDropdown)}
                    className="w-full flex items-center justify-between p-3 bg-zinc-800 rounded-lg border border-zinc-700 hover:bg-zinc-700 transition-colors"
                  >
                    <span className="text-white font-medium truncate">
                      {selectedToolId && messages.flatMap(message => 
                        message.toolInvocations?.filter(tool => 
                          `${message.id}-${tool.toolCallId}` === selectedToolId
                        ).map(tool => getToolTitle(tool))
                      ).filter(Boolean)[0] || "Select a tool result"}
                    </span>
                    <ChevronDown 
                      className={`w-5 h-5 text-zinc-400 transition-transform ${
                        showToolsDropdown ? 'rotate-180' : ''
                      }`}
                    />
                  </button>
                  
                  {/* Dropdown Menu */}
                  {showToolsDropdown && (
                    <div className="absolute z-10 mt-1 w-full bg-zinc-800 border border-zinc-700 rounded-lg shadow-lg max-h-64 overflow-y-auto">
                      {messages.flatMap(message => 
                        message.toolInvocations?.map(tool => {
                          const id = `${message.id}-${tool.toolCallId}`;
                          const title = getToolTitle(tool);
                          return (
                            <button
                              key={id}
                              onClick={() => {
                                setSelectedToolId(id);
                                setShowToolsDropdown(false);
                              }}
                              className={`w-full text-left px-4 py-3 hover:bg-zinc-700 transition-colors ${
                                selectedToolId === id ? 'bg-zinc-700 text-white' : 'text-zinc-300'
                              }`}
                            >
                              <div className="font-medium">{title}</div>
                              <div className="text-xs text-zinc-400 mt-1">
                                {message.createdAt ? new Date(message.createdAt).toLocaleString() : ''}
                              </div>
                            </button>
                          );
                        }) || []
                      )}
                    </div>
                  )}
                </div>
              )}
            </div>

            {/* Tool content area */}
            <div className="overflow-y-auto flex-1 p-4">
              {/* Extract the tool result display logic from ChatSidebar */}
              {selectedToolId && messages.map(message => 
                message.toolInvocations?.map(tool => {
                  const toolId = `${message.id}-${tool.toolCallId}`;
                  if (toolId === selectedToolId) {
                    // Always pass these standard props to tool components
                    const commonProps = {
                      toolCallId: tool.toolCallId,
                      toolInvocation: tool
                    };
                    
                    // Get the tool name for rendering
                    const toolTitle = getToolTitle(tool);
                   
                    // All available tool components
                    switch(tool.toolName) {
                      // Market data tools
                      case 'getMarketMovers':
                        return <MarketMovers key={toolId} {...commonProps} />;
                      case 'getTokenInfo':
                        return <TokenInfo key={toolId} {...commonProps} />;
                      case 'searchTokens':
                        return <SearchTokens key={toolId} {...commonProps} />;
                      case 'getTotalCryptoMarketCap':
                        return <TotalCryptoMarketCap key={toolId} {...commonProps} />;
                      case 'getMarketCategories':
                        return <MarketCategories key={toolId} {...commonProps} />;
                      case 'getDerivativesExchanges':
                        return <DerivativesExchanges key={toolId} {...commonProps} />;
                      case 'getRecentlyLaunchedCoins':
                        return <RecentCoinsResults key={toolId} {...commonProps} />;
                      case 'getTopHolders':
                        return <TopHoldersDisplay key={toolId} {...commonProps} />;
                        
                      // Balance & portfolio tools
                      case 'getUserSolanaBalance':
                      case 'getAgentSolanaBalance':
                        return <SolanaBalance key={toolId} {...commonProps} />;
                      case 'getUserPortfolioValue':
                      case 'getAgentPortfolioValue':
                        return <PortfolioValue key={toolId} {...commonProps} />;
                      case 'getUserTokenHoldings':
                      case 'getAgentTokenHoldings':
                        return <TokenHoldings key={toolId} {...commonProps} />;
                        
                      // Market indicators
                      case 'getFearAndGreedIndex':
                        return <FearAndGreedIndex key={toolId} {...commonProps} />;
                      case 'getSolanaTransactionVolume':
                        return <SolanaTransactionVolume key={toolId} {...commonProps} />;
                        
                      // Account tools
                      case 'getAccountDetails':
                        return <AccountInfo key={toolId} {...commonProps} />;
                        
                      // Trending & top data
                      case 'getTrendingTokens':
                        return tool?.args?.chain === 'solana' 
                          ? <TrendingSolanaTokens key={toolId} {...commonProps} />
                          : <TrendingCoins key={toolId} {...commonProps} />;
                      case 'getTopNfts':
                        return <TopNFTsResults key={toolId} {...commonProps} />;
                        
                      // Screening tools  
                      case 'getRecentDexScreenerTokens':
                        return <RecentDexScreenerTokens key={toolId} {...commonProps} />;
                      case 'getCryptoNews':
                        return <RecentNews key={toolId} {...commonProps} />;
                        
                      // Analysis tools
                      case 'stockAnalysis':
                        return <StockAnalysis key={toolId} {...commonProps} />;
                      case 'optionsAnalysis':
                        return <OptionsAnalysis key={toolId} {...commonProps} />;
                      case 'newsAnalysis':
                        return <NewsAnalysis key={toolId} {...commonProps} />;
                      case 'webResearch':
                        return <WebResearch key={toolId} {...commonProps} />;
                      case 'getTradingViewChart':
                        return <TradingViewChart key={toolId} {...commonProps} />;
                      case 'getFredSeries':
                        return <FredAnalysis key={toolId} {...commonProps} />;
                        
                      case 'swap':
                        return <ExecuteSwap key={toolId} {...commonProps} />;
                        
                      
                      case 'getTechnicalAnalysis':
                        return 'result' in tool ? <TechnicalAnalysis key={toolId} data={tool.result} /> : null;
                        
                      case 'fredSearch':
                        return <FredSearch key={toolId} {...commonProps} onShowChart={(seriesId) => {
                          handleToolSelect(`Show me the FRED series ${seriesId}`);
                        }} />;
                        
                      default:
                        return (
                          <div key={toolId} className="p-4 bg-zinc-800 rounded-lg">
                            <h3 className="text-white text-lg mb-2">{toolTitle}</h3>
                            <div className="text-zinc-400 text-sm">
                              No results available
                            </div>
                          </div>
                        );
                    }
                  }
                  return null;
                })
              )}
            </div>
          </motion.div>
        </motion.div>
      )}
    </AnimatePresence>
  );
}

export const runtime = 'nodejs';
export const dynamicParams = true;
